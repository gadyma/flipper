{
  "manifest_version": 3,
  "name": "Text Conversion Tool",
  "version": "1.0.4",
  "description": "A tool for various text conversions and encodings",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
